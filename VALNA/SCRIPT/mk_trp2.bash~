#!/bin/bash
#SBATCH --mem=10G
#SBATCH --time=10
#SBATCH --ntasks=1

echo 'Hello! Running mk_trp2'

if [[ $# -ne 4 ]]; then echo 'mk_trp2.bash [CONFIG (eORCA12, eORCA025 ...)] [RUNID (mi-aa000)] [TAG (19991201_20061201_ANN)] [FREQ (1y)]'; exit 1 ; fi

CONFIG=$1
RUNID=$2
TAG=$3
FREQ=$4

# load path and mask
. param.bash
. ${SCRPATH}/common.bash

cd $DATPATH/

# name
RUN_NAME=${RUNID#*-}

# download data if needed (useless if data already there)
#${SCRPATH}/get_data.bash $RUNID $FREQ $TAG grid-V
#${SCRPATH}/get_data.bash $RUNID $FREQ $TAG grid-U

# check presence of input file
FILEV=`ls [nu]*${RUN_NAME}o_${FREQ}_${TAG}*_grid[-_]V.nc`
FILEU=`ls [nu]*${RUN_NAME}o_${FREQ}_${TAG}*_grid[-_]U.nc`
FILET=`ls [nu]*${RUN_NAME}o_${FREQ}_${TAG}*_grid[-_]T.nc`
if [ ! -f $FILEV ] ; then echo "$FILEV is missing; exit"; echo "E R R O R in : ./mk_trp2.bash $@ (see SLURM/${CONFIG}/${RUNID}/trp_${FREQ}_${TAG}.out)" >> ${EXEPATH}/ERROR.txt ; exit 1 ; fi
if [ ! -f $FILEU ] ; then echo "$FILEU is missing; exit"; echo "E R R O R in : ./mk_trp2.bash $@ (see SLURM/${CONFIG}/${RUNID}/trp_${FREQ}_${TAG}.out)" >> ${EXEPATH}/ERROR.txt ; exit 1 ; fi
if [ ! -f $FILET ] ; then echo "$FILET is missing; exit"; echo "E R R O R in : ./mk_trp2.bash $@ (see SLURM/${CONFIG}/${RUNID}/trp_${FREQ}_${TAG}.out)" >> ${EXEPATH}/ERROR.txt ; exit 1 ; fi

if [ -z $(ncdump -h $FILET | grep sigma0) ] ; then 
  # If density not already in grid-T file then calculate it
  $CDFPATH/cdfsig0 -t $FILET -sal '|so|so_abs|vosaline|' -tem '|thetao|thetao_con|votemper|' -nc4 -o ${FILET}_sigma0
  if [ $? == 0 ] ; then ncks -v vosigma0 ${FILET}_sigma0 -A $FILET; rm ${FILET}_sigma0 ; fi
fi

# extract cross section
$CDFPATH/cdf_xtrac_brokenline -t $FILET -u $FILEU -v $FILEV -l ${EXEPATH}/SECTIONS/sections_XTRAC.dat -b ${MSKPATH}/bathymetry_${CONFIG}-GO6.nc -sigma0 -vecrot -o nemoXsec_${RUN_NAME}o_${FREQ}_${TAG}_
if [[ $? -ne 0 ]]; then 
   echo "error when running cdf_xtrac_brokenline; exit" ; echo "E R R O R in : ./mk_trp2.bash $@ (see SLURM/${CONFIG}/${RUNID}/trp_${FREQ}_${TAG}.out)" >> ${EXEPATH}/ERROR.txt ; exit 1
fi
# make trp
for xsec in nemoXsec_${RUN_NAME}o_${FREQ}_${TAG}_*_section.dat ; do
  xsec_file="$(echo $xsec | rev | cut -d"_" -f2- | rev).nc"
  $CDFPATH/cdfsigtrp -brk $xsec_file -smin 27.9 -smax 30.0 -nbins 1 -o ${xsec_file%.nc}_
  if [[ $? -ne 0 ]]; then 
    echo "error when running cdfsigtrp for section file ${xsec}; exit" ; echo "E R R O R in : ./mk_trp2.bash $@ (see SLURM/${CONFIG}/${RUNID}/trp_${FREQ}_${TAG}.out)" >> ${EXEPATH}/ERROR.txt ; exit 1
  fi
done

